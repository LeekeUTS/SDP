@model MvcApplication1.Models.LoginModel

@{
    ViewBag.Title = "Log in";
}
<div class="container">
    <div id="loginbox" style="margin-top:50px;" class="mainbox col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
        <div class="panel panel-info">
            <div class="panel-heading">
                <div class="panel-title">Log In</div>
            </div>
            <div style="padding-top:30px" class="panel-body">
                @using (Html.BeginForm(new { ReturnUrl = ViewBag.ReturnUrl }))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true)


                            <div class="form-group">
                                @Html.LabelFor(m => m.UserName)
                                <div class="input-group" data-validate="number">
                                    <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                                    @Html.TextBoxFor(m => m.UserName, new { @class="form-control", placeholder="Number Only", required="required"})
                                    <span class="input-group-addon danger"><span class="glyphicon glyphicon-asterisk"></span></span>
                                    @Html.ValidationMessageFor(m => m.UserName)
                                </div>
                            </div>
                            <div class="form-group">
                                    @Html.LabelFor(m => m.Password)
                                <div class="input-group">
                                    <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
                                    @Html.PasswordFor(m => m.Password, new { @class="form-control", placeholder="Required", required="required"})
                                    <span class="input-group-addon danger"><span class="glyphicon glyphicon-asterisk"></span></span>
                                    @Html.ValidationMessageFor(m => m.Password)
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="input-group">
                                    <div class="checkbox">
                                        <lable>
                                            @Html.CheckBoxFor(m => m.RememberMe, new { @class="mln"})
                                            @Html.LabelFor(m => m.RememberMe, new { @class = "checkbox" })
                                        </lable>
                                    </div>
                                </div>
                            </div>

        <input type="submit" class="btn btn-primary sizeFull" value="Log in" />
        <hr />
        <div class="alert alert-warning">
            If you don't have an account.
            @Html.ActionLink("Register", "Register", new { }, new { @class="btn btn-warning sizeFull mtm"})
        </div>
        }
    </div>
        </div>
    </div>
</div>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
